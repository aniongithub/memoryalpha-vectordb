// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "Python 3",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerComposeFile": "../docker-compose.yml",
	"service": "lcars",
	"overrideCommand": true,
	"remoteUser": "vscode",
	"postAttachCommand": "/workspace/memoryalpha_rag/wait-for-ollama.sh",
	"features": {
		"ghcr.io/nils-geistmann/devcontainers-features/create-remote-user:0": {
			"passwordLessSudo": true
		}
	},
	"customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
			},
			"extensions": [
				"ms-python.python",
				"zaaack.markdown-editor"
			]
        }
    },
	"workspaceFolder": "/workspace/memoryalpha_rag",	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8000
	],

	"portsAttributes": {
		"8000": {
			"label": "LCARS API",
			"onAutoForward": "ignore",
			"requireLocalPort": false
		}
	}
}
